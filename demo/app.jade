app-header(color="blue",
    [addMenuTrigger]="true",
    [brand]="appTitle",
    (onSidebarToggle)="open = $event",
    (onActionClicked)="onActionClicked($event)",
    [actions]="headerActions")

sidebar([open]="open", [fullHeight]="true")
    img.w-100(src="./img/angular-logo2.png")
    side-menu([items]="menuItems",
    (itemClicked)="onItemClicked($event)")

section#main
    router-outlet

